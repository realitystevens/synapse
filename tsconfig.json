{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "App.tsx",
    "index.js",
    "app.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
